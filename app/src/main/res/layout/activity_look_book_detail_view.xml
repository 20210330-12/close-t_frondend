<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LookBookDetailViewActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:background="@color/white"
        android:elevation="0dp" />

    <ImageView
        android:id="@+id/idDetailImage"
        android:layout_width="280dp"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="189dp"
        android:scaleType="centerCrop"
        android:background="#FD81AE" />
    
    <ImageView
        android:id="@+id/idHeartIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:background="@drawable/heart_icon" />

    <ImageView
        android:id="@+id/idExitIcon"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="95dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="153dp"
        android:background="@drawable/exit_icon" />

    <TextView
        android:id="@+id/idCommentText"
        android:layout_width="262dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="404dp"
        android:text="@string/comment"
        android:textAppearance="@style/comment"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/idHashTagContainer"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/idCommentText"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/idFirstHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/hashtag_rectangle"
            android:text="styles[0]"
            android:textAppearance="@style/hashtag"
            android:gravity="center_horizontal|center" />

        <TextView
            android:id="@+id/idSecondHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/hashtag_rectangle"
            android:text="@styles[1]"
            android:textAppearance="@style/hashtag"
            android:gravity="center_horizontal|center" />

        <TextView
            android:id="@+id/idThirdHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/hashtag_rectangle"
            android:text="@string/style[2]"
            android:textAppearance="@style/hashtag"
            android:gravity="center_horizontal|center"

    </LinearLayout>

</RelativeLayout>