<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingEnd="10dp">


    <ImageView
        android:id="@+id/myClosetBox"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerInside"
        android:src="@drawable/my_closet_box"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/myClosetPic"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/full_heart"
        app:layout_constraintBottom_toBottomOf="@+id/myClosetBox"
        app:layout_constraintEnd_toEndOf="@+id/myClosetBox"
        app:layout_constraintStart_toStartOf="@+id/myClosetBox"
        app:layout_constraintTop_toTopOf="@+id/myClosetBox" />
<!--    android:foreground="@drawable/cross"-->
<!--    android:foregroundTint="#333333"-->

    <ImageButton
        android:id="@+id/myClosetlikeBtn"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="#00FFFFFF"
        android:scaleType="centerInside"
        android:src="@drawable/empty_heart"
        android:tag="@drawable/empty_heart"
        app:layout_constraintEnd_toEndOf="@+id/myClosetBox"
        app:layout_constraintTop_toTopOf="@+id/myClosetBox" />

</androidx.constraintlayout.widget.ConstraintLayout>